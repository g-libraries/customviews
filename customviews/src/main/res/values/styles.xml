<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AdapterItemContent">
        <item name="android:textColor">@color/text_default</item>
        <item name="android:textSize">@dimen/text_size_wheel_content</item>
        <item name="android:padding">@dimen/default_margin_padding_x_small</item>
        <item name="android:layout_marginTop">@dimen/default_margin_padding</item>
        <item name="android:layout_marginBottom">@dimen/default_margin_padding</item>
    </style>

    <style name="ProfileHTextView" parent="DefaultAccentText">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
    </style>

    <style name="DefaultAccentText" parent="HelveticaRegularTextView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="HelveticaRegularTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/helvetica_neue_regular</item>
        <item name="android:includeFontPadding">false</item>

    </style>
</resources>